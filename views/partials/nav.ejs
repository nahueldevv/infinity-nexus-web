<header id="header"
  class="bg-white/80 dark:bg-dark-bg/80 backdrop-blur-sm fixed top-0 left-0 w-full z-50 transition-all duration-300 border-b border-gray-200 dark:border-gray-800">
  <nav class="container mx-auto px-6 py-3 flex justify-between items-center">

    <a href="/" class="flex-shrink-0 flex items-center text-2xl font-extrabold">
      <img src="/images/infinity-nexus-not-bg.png" alt="Logo de Infinity Nexus" class="h-12 md:h-14 w-auto mr-3" />
      <span
        class="hidden lg:inline bg-gradient-to-r from-infinity-cyan to-infinity-purple text-transparent bg-clip-text">
        INFINITY NEXUS
      </span>
    </a>

    <ul class="hidden md:flex items-center  space-x-6 lg:space-x-8 font-semibold text-gray-700 dark:text-gray-300">
      <li><a href="/tienda" class="hover:text-infinity-cyan transition-colors">Tienda</a></li>
      <li><a href="/sobre-nosotros" class="hover:text-infinity-cyan transition-colors">Sobre Nosotros</a></li>
      <li><a href="/capacitaciones" class="hover:text-infinity-cyan transition-colors">Capacitaciones</a></li>
      <li><a href="/sucursales" class="hover:text-infinity-cyan transition-colors">Sucursales</a></li>
      <li><a href="/soporte" class="hover:text-infinity-cyan transition-colors">Soporte</a></li>
    </ul>

    <div class="flex items-center space-x-2 sm:space-x-4">
      <a href="#" aria-label="Mi Cuenta"
        class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
        <ion-icon name="person-circle-outline" class="w-7 h-7 text-gray-600 dark:text-gray-300"></ion-icon>
      </a>

      <button id="cart-button" aria-label="Ver Carrito de Cotización"
        class="relative p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
        <ion-icon name="cart-outline" class="w-7 h-7 text-gray-600 dark:text-gray-300"></ion-icon>
        <span id="cart-counter"
          class="absolute -top-1 -right-1 bg-infinity-purple text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center hidden">0</span>
      </button>

      <button id="theme-toggle" class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
        <ion-icon id="theme-icon-sun" name="sunny" class="w-6 h-6 text-yellow-500 hidden"></ion-icon>
        <ion-icon id="theme-icon-moon" name="moon" class="w-6 h-6 text-infinity-cyan"></ion-icon>
      </button>

      <button id="mobile-menu-button"
        class="md:hidden p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
        <ion-icon name="menu-outline" class="w-6 h-6 text-gray-800 dark:text-gray-200"></ion-icon>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-dark-bg border-t border-gray-200 dark:border-gray-800">
    <ul class="flex flex-col items-center divide-y divide-gray-200 dark:divide-gray-700 w-full">
      <li class="w-full text-center py-4"><a href="/tienda"
          class="font-semibold text-gray-700 dark:text-gray-300 hover:text-infinity-cyan transition-colors">Tienda</a>
      </li>
      <li class="w-full text-center py-4"><a href="/sobre-nosotros"
          class="font-semibold text-gray-700 dark:text-gray-300 hover:text-infinity-cyan transition-colors">Sobre
          Nosotros</a></li>
      <li class="w-full text-center py-4"><a href="/capacitaciones"
          class="font-semibold text-gray-700 dark:text-gray-300 hover:text-infinity-cyan transition-colors">Capacitaciones</a>
      </li>
      <li class="w-full text-center py-4"><a href="/sucursales"
          class="font-semibold text-gray-700 dark:text-gray-300 hover:text-infinity-cyan transition-colors">Sucursales</a>
      </li>
      <li class="w-full text-center py-4"><a href="/soporte"
          class="font-semibold text-gray-700 dark:text-gray-300 hover:text-infinity-cyan transition-colors">Soporte</a>
      </li>

      <li class="w-full text-center py-4 border-t border-gray-200 dark:border-gray-700 mt-4 pt-4">
        <a href="#" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-infinity-cyan transition-colors">Mi
          Cuenta</a>
      </li>
    </ul>
  </div>
</header>
<div id="cart-sidebar"
  class="fixed top-0 right-0 h-full w-full max-w-md bg-white dark:bg-dark-bg shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-[60]">
  <div class="h-full flex flex-col">
    <div class="flex justify-between items-center p-6 border-b border-gray-200 dark:border-gray-800">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Mi Cotización</h2>
      <button id="close-cart-button" class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700">
        <ion-icon name="close-outline" class="w-7 h-7 text-gray-600 dark:text-gray-300"></ion-icon>
      </button>
    </div>

    <div id="cart-items-container" class="flex-1 overflow-y-auto p-6 space-y-6">
    </div>

    <div class="p-6 border-t border-gray-200 dark:border-gray-800">
      <div class="flex justify-between items-center mb-4">
        <span class="text-lg font-semibold text-gray-700 dark:text-gray-300">Subtotal:</span>
        <span id="cart-subtotal" class="text-xl font-bold text-gray-900 dark:text-gray-100">$0.00</span>
      </div>
      <a href="/checkout"
        class="w-full block text-center bg-gradient-to-r from-infinity-blue to-infinity-purple text-white font-bold py-3 px-6 rounded-lg text-lg hover:shadow-lg">
        Finalizar Cotización
      </a>
    </div>
  </div>
</div>
<div id="cart-overlay" class="fixed inset-0 bg-black/50 z-50 hidden"></div>